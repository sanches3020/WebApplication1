@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Настройки</title>
    <link rel="stylesheet" href="~/css/style.css" />
</head>
<body>
    <div class="container">
        <nav class="sidebar">
            <div class="sidebar-user">
                <img src="@Url.Content("~/images/default-avatar.png")" alt="User Avatar" class="user-avatar" />
                <div class="user-info">
                    <div class="user-name">@Context.Session.GetString("UserName")</div>
                    <div class="user-email">@Context.Session.GetString("UserEmail")</div>
                </div>
            </div>
            <ul class="sidebar-menu">
                <li><a asp-controller="Mood" asp-action="Index">Календарь</a></li>
                <li><a asp-controller="Notes" asp-action="Index">Заметки</a></li>
                <li><a asp-controller="Emotions" asp-action="Index">Эмоции</a></li>
                <li><a asp-controller="Statistics" asp-action="Index">Статистика</a></li>
                <li><a asp-controller="Settings" asp-action="Index" class="active">Настройки</a></li>
            </ul>
        </nav>

        <main class="content">
            <h2>НАСТРОЙКИ</h2>

            <div class="settings-option">
                <span>СМЕНИТЬ ТЕМУ</span>
                <div class="theme-toggle"></div>
            </div>

            <div class="settings-links">
                <a asp-controller="Account" asp-action="Index">АККАУНТ</a>
                <a asp-controller="Account" asp-action="Logout">ВЫХОД</a>
            </div>
        </main>
    </div>
    @section Scripts {
        <script src="~/js/settings.js"></script>
    }
</body>
</html>
